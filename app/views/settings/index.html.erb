<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><b>Email</b></td>
        <td><b>Feature</b></td>
        <td><b>Items</b></td>
        <td><b>Priority</b></td>
      </tr>  
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.email %></td>
        <td><%= check_box_tag :feature, setting.feature, setting.feature, {disabled:true} %></td>
        <td><%= setting.items %></td>
        <td><%= setting.priority %></td>

        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

